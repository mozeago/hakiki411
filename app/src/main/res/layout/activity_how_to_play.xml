<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".LeaderBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorMainBackground"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Wanjiku Kenya"
                android:textColor="@color/colorButtonsBackground"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Points:"
                android:textColor="@color/colorButtonsBackground"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Skill:"
                android:textColor="@color/colorButtonsBackground"
                android:textStyle="bold" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:elevation="5dp"
            android:src="@drawable/profile_image"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="How To Play"
            android:textColor="@color/colorButtonsBackground"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Hakiki411 Game"
            android:textColor="@color/colorButtonsBackground" />
        <ImageView
            android:src="@drawable/line_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="The game aims to teach media literacy and study how people interact with misinformation online. You will see a social media-like news feed. Some posts are from legitimate and trusted source"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/colorButtonsBackground"
            android:textSize="12sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/verified"
            android:padding="5dp"
            android:text="VERIFIED"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="#66f414"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Some are false info from misleading reports, click bait headlines, conspiracy theroies and mis-informations."
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/colorButtonsBackground"
            android:textSize="12sp" />

        <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/fake_news"
                android:padding="5dp"
                android:text="FAKE NEWS"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#76050b"
                android:textSize="12sp"
                android:textStyle="bold" />
        <ImageView
            android:src="@drawable/line_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Your goal is to promote a healthy social media experience by promoting information from reliable sources and not from low credibility sources and websites."
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/colorButtonsBackground"
            android:textSize="12sp" />
        <Button
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_round_corner"
            android:text="OK, go it! "
            android:textAllCaps="false"
            android:textColor="@color/colorMainBackground" />
    </LinearLayout>
</LinearLayout>